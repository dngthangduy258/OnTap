@model List<Book>

<partial name="_ThongBao" />
<div class="alert alert-info pt-2">
    Có <b>@ViewBag.SUM </b> sách trong thư viện 
</div>
<div class="row">
    <div class="col-md-6">
        <h2>LIST BOOK</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Add" class="btn btn-primary">
            Thêm mới sách
        </a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tựa sách</th>
            <th>Giá bìa</th>
            <th>Số lượng </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.Title</td>
            <td>@x.Price</td>
            <td>@x.Quantity</td>
            <td>
                <a asp-action="Update" asp-route-id="@x.Id" class="btn btn-success">
                   Sửa
                </a>
                <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger">
                   Xoá
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

